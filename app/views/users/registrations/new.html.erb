<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<div class="container">
  <form>
    <div class="row">
      <h4 class="header-title">新規登録</h4>
      <div class="input-group input-group-icon">
        <%= f.text_field :name, class: "form-control", placeholder: "NickName", type: "text" %>
        <div class="input-icon"><i class="material-icons">account_circle</i></div>
      </div>
      <div class="input-group input-group-icon">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-Mail", type: "email" %>                 
        <div class="input-icon"><i class="material-icons">email</i></div>
      </div>
      <div class="input-group input-group-icon">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password(半角英数混合)", type: "password"%>
        <div class="input-icon"><i class="material-icons">vpn_key</i></div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "新規登録する", class: "btn" %>
    </div>
  </form>
</div>
<% end %>